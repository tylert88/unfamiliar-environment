.page-header
  .pull-right
    - if policy(Exercise).create?
      = link_to 'Create Exercise', new_curriculum_exercise_path, class: 'btn btn-info'

  %h1 #{@curriculum.name} Exercises

= render '/instructor/curriculums/nav', tab: :exercises

.row
  .col-md-12
    %table.table
      %thead
        %th Exercise Name
        %th.text-right Actions
      %tbody
        - @exercises.each do |exercise|
          %tr
            %td= link_to exercise.name, exercise.github_repo_url
            %td.text-right
              = link_to edit_curriculum_exercise_path(@curriculum.id, exercise) do
                edit
