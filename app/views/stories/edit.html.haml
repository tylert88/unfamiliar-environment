.page-header
  %h1 Edit Story

%ol.breadcrumb
  %li= link_to "Class Projects", class_projects_path
  %li= link_to @class_project.name, class_project_path(@class_project)
  %li.active Edit Story

= render 'form'

.row
  .col-md-offset-2.col-md-7
    .well.text-center
      = link_to 'Delete', class_project_epic_story_path(@class_project, @epic, @story), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger"
