= form_for [:instructor, @cohort, @writeup_topic], html: {class: "form-horizontal"} do |f|
  = errors_for(f)

  .form-group
    = f.label :subject, class: "col-sm-2 control-label"
    .col-sm-6
      = f.text_field :subject, class: "form-control", autofocus: true

  .form-group
    = f.label :description, class: "col-sm-2 control-label"
    .col-sm-6
      = f.text_area :description, class: "form-control", rows: 8

  .form-group
    .col-sm-offset-2.col-sm-10
      .checkbox
        %label
          = f.check_box :active
          Active

  .form-group
    .col-sm-offset-2.col-sm-6
      = f.submit class: 'btn btn-primary'
