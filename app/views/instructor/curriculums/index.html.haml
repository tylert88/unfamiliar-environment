.page-header
  .pull-right
    = link_to 'New Curriculum', new_curriculum_path, class: 'btn btn-info'
  %h1 Curriculums

%table.table.table-hover.table-striped
  %thead
    %tr
      %th Name
      %th Version
      %th
      %th
  %tbody
    - @curriculums.each do |curriculum|
      %tr
        %td= link_to curriculum.name, curriculum_path(curriculum)
        %td= curriculum.version
        %td= link_to "Learning Experiences", curriculum_learning_experiences_path(curriculum)
        %td.text-right
          = link_to 'edit', edit_curriculum_path(curriculum)
