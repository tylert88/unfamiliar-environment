%h2.page-title= @assignment_submission.assignment.name
= form_for @assignment_submission, url: cohort_assignment_submission_path(@cohort, @assignment_submission), method: :patch, html: { class: "form-horizontal"} do |f|
  = errors_for(f)
  .form-group
    = f.label :submission_url, class: "control-label col-sm-2"
    .col-md-6
      = f.text_field :submission_url, class: "form-control"
  .form-group
    = f.label :time_spent, "Time to complete in minutes", class: "control-label col-sm-2"
    .col-md-2
      = f.number_field :time_spent, class: "form-control"
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: "btn btn-info"
