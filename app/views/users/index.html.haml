.page-header
  .pull-right
    = link_to users_path(format: :csv), class: 'btn btn-default' do
      %i.glyphicon.glyphicon-download
      Download as CSV
    = link_to 'New User', new_user_path, class: 'btn btn-info'
  %h1 Users

%table.table
  %thead
    %tr
      %th Name
      %th Role
      %th Email
      %th Phone
      %th
  %tbody
    - @users.each do |user|
      %tr
        %td= link_to user.full_name, user_path(user)
        %td= user.role
        %td= mail_to user.email, user.email
        %td= user.phone
        %td= link_to 'edit', edit_user_path(user)
