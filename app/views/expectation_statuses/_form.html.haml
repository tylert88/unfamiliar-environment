= form_for([user, expectation, status], html: {class: 'form-horizontal'}) do |f|
  .form-group
    = f.label :notes, class: 'control-label col-sm-2'
    .col-sm-10
      = f.text_area :notes,
                    class: 'form-control',
                    placeholder: 'Notes will not be seen until they are published'
  .form-group
    .col-sm-10.col-sm-offset-2
      .btn-group{"data-toggle" => "buttons"}
        %label.btn.btn-danger{class: f.object.on_track? ? nil : 'active' }
          = f.radio_button :on_track, 0, autocomplete: 'off', checked: !f.object.on_track
          Not On Track
        %label.btn.btn-success{class: f.object.on_track? ? 'active' : nil}
          = f.radio_button :on_track, 1, autocomplete: 'off', checked: f.object.on_track
          On Track
  .form-group
    .col-sm-10.col-sm-offset-2
      = f.submit class: 'btn btn-primary'
