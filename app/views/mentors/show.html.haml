.page-header
  - if current_user == @user
    %h1 My Mentees
  - else
    %h1 Mentees for #{@user.full_name}

- if @mentees.present?
  %table.table.table-bordered.table-hover.table-striped
    %thead
      %tr
        %th Name
        %th Daily Plans
    %tbody
      - @mentees.each do |mentee|
        %tr
          %td= mentee.full_name
          %td= link_to "Daily plans", cohort_daily_plans_path(mentee.current_cohort)
- else
  - if current_user == @user
    .jumbotron
      %h2 You do not have any mentees at the moment
      %p.lead Contact us if you'd like to become a mentor
  - else
    .jumbotron
      %h2 #{@user.full_name} does not have any mentees at the moment
